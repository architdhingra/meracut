<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:customfont="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/filter_screen"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.archit.meracut.select_type">


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/choice"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <View
            android:layout_width="0dp"
            android:layout_weight="0.05"
            android:layout_height="match_parent"/>


        <ImageButton
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:background="@drawable/spa"
            android:layout_height="match_parent"
            android:onClick="spa"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="match_parent"/>



        <ImageButton
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:background="@drawable/tatoo"
            android:layout_height="match_parent"
            android:onClick="tatoo"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="match_parent"/>

        <ImageButton
            android:layout_weight="0.2"
            android:background="@drawable/salon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="salon"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="0.05"
            android:layout_height="match_parent"/>



    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@+id/choice"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <com.example.archit.meracut.changetypeface
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="Spa"
            customfont:typeface="Roboto-Light.ttf"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:onClick="startmain"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="match_parent"/>

        <com.example.archit.meracut.changetypeface
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="Tattoo"
            customfont:typeface="Roboto-Light.ttf"
            android:textSize="20dp"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:onClick="startmain"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="match_parent"/>

        <com.example.archit.meracut.changetypeface
            android:layout_weight="1"
            android:text="Salon"
            android:gravity="center"
            customfont:typeface="Roboto-Light.ttf"
            android:textSize="20dp"
            android:textColor="#333333"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="startmain2"/>


    </LinearLayout>

</RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>


</LinearLayout>
