<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:shrinkColumns="*"
        android:id="@+id/tb"
        android:layout_height="match_parent">

        <TableRow
            android:id="@+id/tr1">

            <com.example.archit.meracut.changetypeface
                android:layout_height="80dp"
                android:padding="20dp"
                app:typeface="Roboto-Regular.ttf"
                android:layout_width="wrap_content"
                android:text="9:00 A.M"
                android:textColor="#000000"
                android:onClick="time"/>
            <com.example.archit.meracut.changetypeface
                android:layout_height="80dp"
                android:padding="20dp"
                android:textColor="#000000"
                app:typeface="Roboto-Regular.ttf"
                android:layout_width="wrap_content"
                android:text="10:00 P.M"
                android:onClick="time"/>
            <com.example.archit.meracut.changetypeface
                android:layout_height="80dp"
                android:padding="20dp"
                android:textColor="#000000"
                app:typeface="Roboto-Regular.ttf"
                android:layout_width="wrap_content"
                android:text="31:00 P.M"
                android:onClick="time"/>
            <com.example.archit.meracut.changetypeface
                android:layout_height="80dp"
                android:padding="20dp"
                android:textColor="#000000"
                app:typeface="Roboto-Regular.ttf"
                android:layout_width="wrap_content"
                android:text="21:00 P.M"
                android:onClick="time"/>

        </TableRow>

        <TableRow
            android:id="@+id/tr2">

            <com.example.archit.meracut.changetypeface
                android:layout_height="80dp"
                android:padding="20dp"
                android:textColor="#000000"
                app:typeface="Roboto-Regular.ttf"
                android:layout_width="wrap_content"
                android:text="3:00 P.M"
                android:onClick="time"/>
            <com.example.archit.meracut.changetypeface
                android:layout_height="80dp"
                android:padding="20dp"
                android:textColor="#000000"
                app:typeface="Roboto-Regular.ttf"
                android:layout_width="wrap_content"
                android:text="4:00 P.M"
                android:onClick="time"/>
            <com.example.archit.meracut.changetypeface
                android:layout_height="80dp"
                android:padding="20dp"
                android:textColor="#000000"
                app:typeface="Roboto-Regular.ttf"
                android:layout_width="wrap_content"
                android:text="5:00 P.M"
                android:onClick="time"/>
            <com.example.archit.meracut.changetypeface
                android:layout_height="80dp"
                android:padding="20dp"
                android:textColor="#000000"
                app:typeface="Roboto-Regular.ttf"
                android:layout_width="wrap_content"
                android:text="6:00 P.M"
                android:onClick="time"/>

        </TableRow>





    </TableLayout>


</LinearLayout>