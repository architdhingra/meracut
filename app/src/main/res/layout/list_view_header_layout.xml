<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:customfont="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:id="@+id/ll"
    android:paddingBottom="10dp"
    android:background="@drawable/nav_drawer"
    android:orientation="vertical" >

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/item_icon_imgview"
        android:layout_width="140dp"
        android:layout_marginTop="20dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/deadpool" />



    <com.example.archit.meracut.changetypeface
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drawer_name"
        android:textSize="45px"
        android:layout_marginTop="5dp"
        customfont:typeface="Roboto-Regular.ttf"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:text="Wish A Design"/>

    <com.example.archit.meracut.changetypeface
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        customfont:typeface="Roboto-Regular.ttf"
        android:layout_gravity="center"
        android:id="@+id/drawer_email"
        android:textSize="40px"
        android:textColor="#000000"
        android:text="wad@wishadesign.com"/>



</LinearLayout>