<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:customfont="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:scrollbars="none"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_pack"
        android:layout_width="180dp"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardUseCompatPadding="true"
        android:layout_marginRight="2dp"
        card_view:cardCornerRadius="2dp"
        android:layout_marginBottom="3dp"
        android:id="@+id/cv_packages"
        card_view:cardElevation="3dp"
        android:foreground="?android:attr/selectableItemBackground">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">




            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/pack_photo"
                android:scaleType="fitXY"
                android:background="@drawable/img3"
                android:layout_alignParentTop="true" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_alignParentTop="true"
                android:id="@+id/pack_check"
                android:background="#ffffff"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />

            <com.example.archit.meracut.changetypeface
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingLeft="8dp"
                android:paddingRight="5dp"
                android:paddingBottom="4dp"
                android:id="@+id/package_discount"
                customfont:typeface="Roboto-Regular.ttf"
                android:layout_marginTop="10dp"
                android:textColor="#E3E3E3"
                android:text="Flat 50% Off"
                android:background="#E32117"/>

            <com.example.archit.meracut.changetypeface
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pack_name"
                android:paddingTop="5dp"
                android:paddingLeft="2dp"
                android:maxLines="2"

                customfont:typeface="Roboto-Bold.ttf"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:text="Name Of The Place"
                android:layout_below="@+id/pack_photo"
                android:textSize="14sp" />

            <com.example.archit.meracut.changetypeface
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/uget"
                android:paddingLeft="2dp"
                customfont:typeface="Roboto-Regular.ttf"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:text="You Get : "
                android:layout_below="@+id/pack_name"
                android:textSize="12sp" />


            <com.example.archit.meracut.changetypeface
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:textSize="11dp"
                android:maxLines="2"
                android:minLines="2"
                android:id="@+id/combo_pack"
                customfont:typeface="Roboto-Light.ttf"
                android:text="Haircut + Spa + Massage"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/pack_name"
                android:layout_marginBottom="3dp"
                android:layout_toRightOf="@+id/uget"/>


            <com.example.archit.meracut.changetypeface
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/desc"
                android:textSize="12dp"
                customfont:typeface="Roboto-Regular.ttf"
                android:layout_marginLeft="5dp"
                android:text="Price    :"
                android:paddingLeft="2dp"
                android:paddingBottom="5dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/combo_pack"
                android:layout_below="@+id/combo_pack"/>

            <com.example.archit.meracut.changetypeface
                android:layout_width="50dp"
                android:textAlignment="center"
                android:layout_height="13dp"
                android:textSize="11dp"
                android:id="@+id/opri"
                customfont:typeface="Roboto-Light.ttf"
                android:text="Rs.130/-"
                android:layout_below="@+id/combo_pack"
                android:layout_toRightOf="@+id/uget"/>

            <com.example.archit.meracut.changetypeface
                android:layout_width="50dp"
                android:layout_height="13dp"
                android:textSize="11dp"
                android:id="@+id/dpri"
                customfont:typeface="Roboto-Light.ttf"
                android:text="    Rs.80/- "
                android:layout_below="@+id/combo_pack"
                android:layout_toRightOf="@+id/opri"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
</LinearLayout>